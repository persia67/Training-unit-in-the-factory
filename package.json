{
  "name": "steeltrain-pro-lms",
  "version": "1.4.0",
  "description": "Danial Steel Training Management System",
  "main": "electron/main.js",
  "author": {
    "name": "Danial Steel Co.",
    "email": "admin@danialsteel.com"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.danialsteel.lms",
    "productName": "SteelPro LMS",
    "copyright": "Copyright Â© 2025 Danial Steel Co.",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "**/*",
      "electron/**/*",
      "!dist/**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!tsconfig.json"
    ]
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}